@model IEnumerable<ADProjGp2_LogicUStationeryStore.Catalogue>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/css/Button-Antiman.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/Requisition.css" rel="stylesheet" type="text/css" />
    <style>
        table thead,table tr{
            border-top-width: 1px;
            border-top-style: solid;
            border-top-color: #808080;
        }

        table tbody th{
            background-color: #d6dfe5;
        }
        table {
            border-bottom-width: 1px;
            border-bottom-style: solid;
            border-bottom-color: #808080;
            table-layout: fixed;
        }
    </style>
</head>
<body>
    <h1 style="padding-bottom:10px;">Index</h1>
    @if (Session["Role"].ToString() == "clerk") {
    <div class="button-container-right"style="padding-top:0;">
        @Html.ActionLink("Create New Item", "Create", "", new { @class = "button button--size-m button--antiman button--round-m button--text-medium" })
    </div>
    }
    <div>
        <table style="min-width:1100px;width:96%;" class="table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inventory.itemId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.unitOfMeasure)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.reorderQuantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.reorderLevel)
                </th>
                <th style="width:40px;">
                    @Html.DisplayNameFor(model => model.bin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.quantityInUnit)
                </th>
                <th>
                    Supplier 1<br />
                    @Html.DisplayNameFor(model => model.Supplier.gstNumber)
                </th>
                <th>
                    Supplier 2<br />
                    @Html.DisplayNameFor(model => model.Supplier1.gstNumber)
                </th>
                <th>
                    Supplier 3<br />
                    @Html.DisplayNameFor(model => model.Supplier2.gstNumber)
                </th>
                <th style="text-align:center;">Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inventory.itemId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.unitOfMeasure)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.reorderQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.reorderLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.bin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantityInUnit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supplier.gstNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supplier1.gstNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supplier2.gstNumber)
                    </td>

                    <td style="border-left:solid;border-left-width:thin;text-align:center;">

                        @if (Session["Role"].ToString() == "clerk")
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = item.itemId }, new { @style = "color:#005bff;" })
                            <span> | </span>
                            @Html.ActionLink("Delete", "Delete", new { id = item.itemId }, new { @style = "color:red;" })
                            <span> | </span>
                        }
                        @Html.ActionLink("Details", "Details", new { id = item.itemId })
                    </td>
                </tr>
            }

        </table>
    </div>
    </body>
</html>