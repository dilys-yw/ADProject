
@{
    Layout = null;
}

<!DOCTYPE html>
@model ADProjGp2_LogicUStationeryStore.Models.ChangePasswordModel
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Change Password</title>
    <link href="~/Content/css/Login.css" type="text/css" rel="stylesheet" />
    @*<script src="~/Scripts/"></script>*@
    <style>
        /*Validation*/
        .text-danger {
            color: #b94a48;
            font-size: 20px;
            font-weight: 400;
        }
    </style>
</head>
<body>

    <div class="main">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center title">
                <h1>Change Password</h1>
                @*<div class="bar"></div>*@
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @id = "ChangePWFormId", @class = "form-horizontal", role = "form" }))
            {
                //       base on login.cshtml in view / home using post

                @Html.AntiForgeryToken()
                HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

            <div class="col-md-6 col-md-offset-3 form">
                @Model.replymsg
                @Html.ValidationMessageFor(m => m.userName, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.userName, new { @class = "form-control", id = "userID", @placeholder = "UserName" })


                @Html.ValidationMessageFor(m => m.oldpassword, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.oldpassword, new { @class = "form-control", id = "oldpassword", @placeholder = "Enter your previous Password", @type = "password" })

                @Html.ValidationMessageFor(m => m.newpassword, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.newpassword, new { @class = "form-control", id = "newpassword", @placeholder = "Enter your new Password", @type = "password" })
                @Html.HiddenFor(m=>m.replymsg)
            </div>

                <div class="col-md-6 col-md-offset-3 text-center title  login-button-container">
                    <br />
                    <button type="submit" class="btn btn-default login" value="changepw" style="width:100%;">Change Password</button>
                   <br />
                    <input type="button" class="btn btn-default login" style="width:100%;margin-top:20px;text-align:center;" onclick="location.href='Login'" value ="Back to Login"/>
                </div>
            }


            <!-------------------------Scoll Message Content ----END------------------------>
            <div class="otherChoice">
                <a class="btn btn-default vColPoint" href="~/Home/CPmap"><i class="fa fa-map" id="btnCP" onmouseover="showMap()" onmouseout="closeMap()"></i>&nbsp;&nbsp;View Colletion Points</a>
                <img src="~/Content/images/CPmapWithRemark.jpg" id="imgMap" hidden="hidden"  onmouseover="showMap()"onmouseout="closeMap()"/>
            </div>
        </div>
    </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            @Scripts.Render("~/bundles/custom-validator")
        }
    <script>

        function showMap() {
            imgMap.removeAttribute("hidden");
        }

        function closeMap() {
            imgMap.setAttribute("hidden", "hidden");
        }

    </script>
</body>
</html>
